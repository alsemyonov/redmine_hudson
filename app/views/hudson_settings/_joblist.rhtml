<%# $Id$
# To change this template, choose Tools | Templates
# and open the template in the editor.
%>
<div class="floating" id="joblist">
<% if @jobs.length == 0 %>
  <%=@error if @error != nil%>
  <%=l(:notice_err_no_jobs) unless @error != nil%>
<% else %>
  <% @jobs.each do |job| %>
    <label>
    <%= check_box_tag 'settings[jobs][]', job, @settings.job_include?(job) %>
    <%= job %>
    </label>
  <% end %>
<% end %>
 <%=link_to_remote l(:label_update_jobs), :update=>'joblist', :url=>{:action => 'joblist', :id=>@project}, :with=>"'url=' + $('settings_url').value"%>
 <%= hidden_field_tag 'settings[jobs][]', '' %>
</div>
 